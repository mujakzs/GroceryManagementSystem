@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="1" Class="px-4" Style="background-color: white;">

        <MudHidden Breakpoint="Breakpoint.MdAndUp">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" OnClick="@ToggleDrawer" />
        </MudHidden>

        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
            <MudImage Src="images/logo.png" Alt="Store Logo" Width="40" Height="40" />

            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudText Typo="Typo.h5" Color="Color.Dark"><b>Grocery Store Management</b></MudText>
            </MudHidden>

            <MudHidden Breakpoint="Breakpoint.MdAndUp">
                <MudText Typo="Typo.subtitle1" Color="Color.Dark"><b>Store Management</b></MudText>
            </MudHidden>
        </MudStack>

        <MudSpacer />

        <MudHidden Breakpoint="Breakpoint.SmAndDown">
            
            <MudButton Variant="Variant.Text" Color="Color.Default" Href="/">Home</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Default" Href="/about">About</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Default" Href="/contact">Contact</MudButton>

            <MudDivider Vertical="true" FlexItem="true" Class="mx-2" />

            <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/login" Class="ml-2">
                Login
            </MudButton>
        </MudHidden>
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen"
               ClipMode="DrawerClipMode.Never"
               Anchor="Anchor.Left"
               Elevation="4"
               Variant="DrawerVariant.Temporary"
               Breakpoint="Breakpoint.Md">

        <MudNavMenu>
            <MudText Typo="Typo.subtitle1" Class="px-4 py-2" Color="Color.Primary"><b>Store Management</b></MudText>
            <MudDivider Class="mb-2" />

            <MudNavLink Icon="@Icons.Material.Filled.Home" Href="/">Home</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Info" Href="/about">About</MudNavLink>
            <MudNavLink Icon="@Icons.Material.Filled.Phone" Href="/contact">Contact</MudNavLink>

            <MudDivider Class="my-2" />
            <MudNavLink Icon="@Icons.Material.Filled.Login" Href="/login">Login</MudNavLink>

        </MudNavMenu>
    </MudDrawer>

    <MudMainContent Class="p-0">
        @Body
    </MudMainContent>

</MudLayout>


@code {
    private bool _drawerOpen = false;
    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;
}